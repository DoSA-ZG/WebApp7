@model Projekt

<tr hx-target="this" hx-swap="outerHTML">
  <td class="text-start">    
    @Model.IdProjekt
  </td>  
  <td class="text-start">    
    <input asp-for="NazivProjekt" class="form-control" />
  </td>
  <td class="text-start">
    <input asp-for="Kratica" class="form-control" />
  </td>
  <td class="text-start">
    <input asp-for="Cilj" class="form-control" />
  </td>
  <td class="text-start">
    <select class="form-select" asp-for="IdVrsteProjekta" asp-items="ViewBag.VrsteProjekta">
    </select>
  </td>
  <td class="text-start">
     @string.Join(", ", Model.Dokumenti.Select(dokument => dokument.IdDoc))
  </td>
  <td class="text-center">
    <input type="hidden" asp-for="IdProjekt" />
    <div class="d-flex justify-content-center">
        <button hx-include="closest tr"
                hx-post="@Url.Action(nameof(ProjektController.Edit))"
                class="btn btn-primary d-flex align-items-center flex-grow-1" title="Spremi">
            <i class="fas fa-save"></i>Spremi
        </button>
        <button class="btn cancel d-flex align-items-center flex-grow-1" 
                hx-get="@Url.Action(nameof(ProjektController.Get), new { id = Model.IdProjekt })"     
                title="Odustani">
            <i class="fas fa-undo-alt"></i>Odustani
        </button>
    </div>
  </td>
  <td>
    <div asp-validation-summary="All"></div>
  </td>
</tr>