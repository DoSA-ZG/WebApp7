@model ZahtijevViewModel

<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-left">
        <a asp-action="Show"
           asp-route-id="@Model.IdZah"
           asp-route-page="@Context.Request.Query["page"]"
           asp-route-sort="@Context.Request.Query["sort"]"
           asp-route-ascending="@Context.Request.Query["ascending"]">
            @Model.OpisZahtijev
        </a>
    </td>
    <td class="text-left">@Model.Prioritet</td>
    <td class="text-left">@Model.NazivVrsteZahtijeva</td>
    <td class="text-left">@Model.NazivSuradnika</td>
    <td class="text-center"> 
        <a asp-action="Edit"
           asp-route-id="@Model.IdZah"
           asp-route-page="@ViewBag.PagingInfo.CurrentPage"
           asp-route-sort="@ViewBag.PagingInfo.Sort"
           asp-route-ascending="@ViewBag.PagingInfo.Ascending" class="btn btn-sm" title="Ažuriraj">
            <i class="fas fa-edit"></i>✏️
        </a>
    </td>
    <td class="text-center"> 
        <form asp-action="Delete" method="post"
              asp-route-id="@Model.IdZah"
              asp-route-page="@ViewBag.PagingInfo.CurrentPage"
              asp-route-sort="@ViewBag.PagingInfo.Sort"
              asp-route-ascending="@ViewBag.PagingInfo.Ascending">
            <input type="hidden" name="Id" value="@Model.IdZah" />
            <button type="submit" class="btn btn-sm btn-danger delete-zahtjev" title="Obriši"><i class="fas fa-trash-alt"></i></button>
        </form>
    </td>
</tr>